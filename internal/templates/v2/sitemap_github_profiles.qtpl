{%- func SitemapGithubProfiles(usernames []string) -%}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
    {%- for _, username := range usernames -%}
        <url>
            <loc>https://u8views.com/github/{%s username %}</loc>
        </url>
    {%- endfor -%}
</urlset>
{%- endfunc -%}

{%- func SitemapGithubProfilesIndex(totalCount, pageSize int64) -%}
<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for begin := int64(0); begin < totalCount; begin += pageSize -%}
    {%- code 
        end := begin + pageSize
        if end > totalCount {
            end = totalCount
        }
    -%}
    <sitemap>
        <loc>https://u8views.com/sitemap-github-profiles-{%dl begin %}-{%dl end %}.xml</loc>
    </sitemap>
{%- endfor -%}
</sitemapindex>
{%- endfunc -%}